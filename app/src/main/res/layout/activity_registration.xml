<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_foodie"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <EditText
        android:id="@+id/etNameReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:hint="Name"
        android:inputType="text"
        android:textColor="#1C3879"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etMobileReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:hint="Mobile Number(10 digits)"
        android:inputType="number"
        android:textColor="#1C3879"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etEmailReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#1C3879"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etDeliveryAddressReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:hint="Delivery Address"
        android:inputType="text"
        android:textColor="#1C3879"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#1C3879"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/etConfirmPasswordReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColor="#1C3879"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Register"
        android:backgroundTint="#1C3879"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/btnReg"
        />

</LinearLayout>

</ScrollView>